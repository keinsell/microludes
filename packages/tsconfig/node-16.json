{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "node@16",
	"extends": "./typesafety.json",
	"compilerOptions": {
		"lib": ["es2021"],
		"module": "commonjs",
		"target": "es2021",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node"
	}
}
